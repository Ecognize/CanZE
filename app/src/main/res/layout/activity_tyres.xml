<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:keepScreenOn="true"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="lu.fisch.canze.activities.TyresActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <TextView
                        android:text="@string/label_TyreFL"
                        android:gravity="center"
                        android:layout_weight="5"
                        android:background="#ffc0c0c0"
                        />
                    <TextView
                        android:layout_width="20dp"
                        android:layout_weight="1" />
                    <TextView
                        android:text="@string/label_TyreFR"
                        android:gravity="center"
                        android:layout_weight="5"
                        android:background="#ffc0c0c0" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/text_TyreFLState"
                        android:gravity="center"
                        android:layout_weight="5"
                        android:background="#ffc0c0c0"
                        />
                    <TextView
                        android:layout_width="20dp"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/text_TyreFRState"
                        android:gravity="center"
                        android:layout_weight="5"
                        android:background="#ffc0c0c0" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/text_TyreFLPressure"
                        android:textColor="#000"
                        android:textSize="48sp"
                        android:gravity="center"
                        android:layout_weight="5"
                        android:background="#ffc0c0c0" />
                    <TextView
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/text_TyreFRPressure"
                        android:textColor="#000"
                        android:textSize="48sp"
                        android:gravity="center"
                        android:layout_weight="5"
                        android:background="#ffc0c0c0" />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="fill_parent"
                android:text="@string/help_PressuresMbar"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <TextView
                        android:text="@string/label_TyreRL"
                        android:gravity="center"
                        android:layout_weight="5"
                        android:background="#ffc0c0c0"
                        />
                    <TextView
                        android:layout_width="20dp"
                        android:layout_weight="1" />
                    <TextView
                        android:text="@string/label_TyreRR"
                        android:gravity="center"
                        android:layout_weight="5"
                        android:background="#ffc0c0c0" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/text_TyreRLState"
                        android:gravity="center"
                        android:layout_weight="5"
                        android:background="#ffc0c0c0"
                        />
                    <TextView
                        android:layout_width="20dp"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/text_TyreRRState"
                        android:gravity="center"
                        android:layout_weight="5"
                        android:background="#ffc0c0c0" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/text_TyreRLPressure"
                        android:textColor="#000"
                        android:textSize="48sp"
                        android:gravity="center"
                        android:layout_weight="5"
                        android:background="#ffc0c0c0" />
                    <TextView
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/text_TyreRRPressure"
                        android:textColor="#000"
                        android:textSize="48sp"
                        android:gravity="center"
                        android:layout_weight="5"
                        android:background="#ffc0c0c0" />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_DoubleSpace"
                android:layout_weight="1" />


            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <TextView
                        android:text="@string/label_TyreSpdPresMisadaption"
                        android:layout_weight="2"
                        />
                    <TextView
                        android:id="@+id/text_TyreSpdPresMisadaption"
                        android:gravity="end"
                        android:layout_weight="1"
                        />
                </TableRow>


                <TableRow>
                    <TextView
                        android:id="@+id/LabelTyreFLId"
                        android:text="ID Front Left"
                        android:layout_weight="2"
                        />
                    <EditText
                        android:id="@+id/text_TyreFLId"
                        android:text="000000"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:digits="0123456789ABCDEF"
                        android:maxLength="6"
                        android:inputType="textCapCharacters"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/LabelTyreFRId"
                        android:text="ID Front Right"
                        android:layout_weight="2"
                        />
                    <EditText
                        android:id="@+id/text_TyreFRId"
                        android:text="000000"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:digits="0123456789ABCDEF"
                        android:maxLength="6"
                        android:inputType="textCapCharacters"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/LabelTyreRLId"
                        android:text="ID Rear Left"
                        android:layout_weight="2"
                        />
                    <EditText
                        android:id="@+id/text_TyreRLId"
                        android:text="000000"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:digits="0123456789ABCDEF"
                        android:maxLength="6"
                        android:inputType="textCapCharacters"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/LabelTyreRRId"
                        android:text="ID Rear Right"
                        android:layout_weight="2"
                        />
                    <EditText
                        android:id="@+id/text_TyreRRId"
                        android:text="000000"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:digits="0123456789ABCDEF"
                        android:maxLength="6"
                        android:inputType="textCapCharacters"
                        />
                </TableRow>







            </TableLayout>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <TableRow>

            <Button
                android:id="@+id/button_TyresRead"
                android:text="Read"
                android:layout_weight="1"
                />
                <TextView
                    android:layout_width="20dp"
                    android:layout_weight="1"
                    />
            <Button
                android:id="@+id/button_TyresWrite"
                android:text="Write"
                android:layout_weight="1"
                />
            </TableRow>
            </TableLayout>

        </LinearLayout>

    </ScrollView>

    <!-- debug line -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        >

        <TextView
            android:text="@string/label_debug"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <TextView
            android:id="@+id/textDebug"
            android:text="@string/default_debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

</LinearLayout>